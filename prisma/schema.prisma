datasource db {
  provider = "postgresql"
  url = env("PG_CONNECTION_URL")
}

model User {
  id           String     @id @unique @default(uuid())
  email        String     @unique
  name         String?
  avatar       String?
  password     String
  role         String     @default("regular")
  status       String     @default("active")
  forms        Form[]
  templates    Template[] @relation("TemplateAdmins")
  authored     Template[] @relation("TemplateAuthor")
}

model Template {
  id          String   @id @unique @default(uuid())
  status      String   @default("draft")
  name        String
  image       String?
  description String
  blocks      Json
  authorId    String
  author      User     @relation("TemplateAuthor", fields: [authorId], references: [id])
  admins      User[]   @relation("TemplateAdmins")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  version     Int      @default(1)
  forms       Form[]
}

model Form {
  id         String   @id @unique @default(uuid())
  templateId String
  template   Template @relation(fields: [templateId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  answers    Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}


generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}
